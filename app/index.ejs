<html>
<head>
  <title><%= htmlWebpackPlugin.options.title %></title>
  <meta charset="utf-8"/>
</head>
<body>
  <nav class="navbar navbar-inverse titlebar">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-brand">PluginBox</div>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search" v-model="filterKey">
          </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="#" @click="isShowAbout = !isShowAbout">
              <span class="glyphicon glyphicon-info-sign"></span>
            </a>
          </li>
          <li>
            <a href="#" @click="isShowSetting = !isShowSetting">
              <span class="glyphicon glyphicon-cog"></span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <addons></addons>
  <div class="container-fluid">
    <footer class="footer">
      <div class="row">
        <div class="col-xs-2 col-xs-offset-10">
          <button class="btn btn-lg btn-success">Update</button>
        </div>
      </div>
    </footer>
  </div>
  <modal :show.sync="isShowAbout" effect="zoom">
    <div slot="modal-header" class="modal-header">
      <h4 class="modal-title">About</h4>
    </div>
    <div slot="modal-body" class="modal-body">
        <div class="row">
          <div class="col-xs-6 col-xs-offset-3 centered">
            <img v-animation animate="tada" src="./assets/avatar_2016.jpg" width="155" height="155"/>
          </div>
        </div>
    </div>
    <div slot="modal-footer" class="modal-footer">
      <button type="button" class="btn btn-success" @click='isShowAbout = false'>Close</button>
    </div>
  </modal>
  <modal :show.sync="isShowSetting" :backdrop="static" effect="zoom">
    <div slot="modal-header" class="modal-header">
      <h4 class="modal-title">Setting</h4>
    </div>
    <div slot="modal-body" class="modal-body">
      <div class="form-horizontal">
        <div class="form-group">
          <label for="cbAutoUpdate" class="col-xs-3 control-label"></label>
          <div class="col-xs-8">
            <div class="checkbox">
              <label>
                <input type="checkbox" id="cbAutoUpdate"> Auto update when app started if checked.
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="filePath" class="col-xs-3 control-label"></label>
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="Choose the path to your WOW.">
          </div>
        </div>
      </div>
    </div>
    <div slot="modal-footer" class="modal-footer">
      <button type="button" class="btn btn-success" @click='isShowSetting = false'>Close</button>
    </div>
  </modal>
</body>
</html>
